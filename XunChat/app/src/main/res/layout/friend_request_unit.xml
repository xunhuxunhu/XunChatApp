<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fl_image"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_request_profile"
            android:layout_margin="10dp"
            android:src="@drawable/ic_loading"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:textColor="#ffff"
            android:background="#FF0000"
            android:layout_margin="10dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/tv_latest_request"
            android:visibility="invisible"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/fl_image"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sender_username"
            android:text="Loading..."
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sender_extras"
            android:text="Loading..."
            android:layout_gravity="center_vertical"
            android:textColor="#A9A9A9"
            android:textSize="15dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added"
        android:textColor="#B2B7B1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:id="@+id/tv_added"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:text="Accept"
        android:textColor="#ffff"
        android:background="#1E90FF"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:id="@+id/btn_accept"
        />
</RelativeLayout>